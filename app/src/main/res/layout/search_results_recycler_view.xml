<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@android:color/background_dark" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_results_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <ImageView
            android:id="@+id/poster_search_results_imageView"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/name_search_results_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/poster_search_results_imageView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating_search_results_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/name_search_results_textView"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/poster_search_results_imageView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/genre_search_results_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rating_search_results_textView"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/poster_search_results_imageView" />

        <TextView
            android:id="@+id/mediaType_search_results_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/poster_search_results_imageView"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/genre_search_results_textView"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/poster_search_results_imageView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>