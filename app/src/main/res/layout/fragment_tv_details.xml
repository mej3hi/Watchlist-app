<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.watchlist.fragment.tvshows.TvDetailsFragment">

    <ImageView
        android:id="@+id/poster_tv_details_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


            <TextView
                android:id="@+id/name_tv_details_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/backdrop_tv_details_imageView"
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name_tv_details_textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/name_tv_details_textView"
                android:layout_toEndOf="@+id/backdrop_tv_details_imageView"
                android:text="@string/rating"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating_tv_details_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView3"
                android:layout_toEndOf="@+id/backdrop_tv_details_imageView"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/release_date_tv_details_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/rating_tv_details_textView"
                android:layout_toEndOf="@+id/backdrop_tv_details_imageView"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/run_time_tv_details_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/release_date_tv_details_textView"
                android:layout_toEndOf="@+id/backdrop_tv_details_imageView"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/overview_tv_details_textView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/backdrop_tv_details_imageView" />

            <TextView
                android:id="@+id/genre_tv_details_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/overview_tv_details_textView" />

            <Button
                android:id="@+id/add_watchlist_tv_details_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/genre_tv_details_textView"
                android:text="@string/addBtn" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/seasons_tv_details_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/add_watchlist_tv_details_btn" />


        </RelativeLayout>
    </ScrollView>



</FrameLayout>
